<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                  HMR TRAIN TIMINGS"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18dp"
        android:layout_marginBottom="16dp"/>
    <!-- android:background="@android:color/holo_red_dark" -->
    <!-- original text color   #e7f1ca"  -->

    <TextView
        android:id="@+id/from_text_view"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:textStyle="bold"
        android:layout_marginLeft="26dp"
        android:paddingLeft="5dp"
        android:paddingTop="6dp"
        android:paddingBottom="3dp"
        android:paddingRight="16dp"
        android:background="@android:color/holo_green_dark"
        android:textSize="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miyapur"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:textColor="@android:color/black"
        android:background="@android:color/darker_gray"
        android:id="@+id/textView2"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/to_textview"
        android:layout_marginStart="13dp" />

    <TextView
        android:layout_below="@id/from_text_view"
        android:id="@+id/to_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="To"
        android:textStyle="bold"
        android:layout_marginLeft="26dp"
        android:paddingLeft="5dp"
        android:paddingBottom="3dp"
        android:paddingTop="4dp"
        android:paddingRight="34dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_green_dark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ameerpet"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="13dp"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:layout_alignTop="@+id/to_textview"
        android:layout_alignEnd="@+id/textView2"
        android:layout_toEndOf="@+id/to_textview" />


    <TextView
        android:id="@+id/timings_heading"
        android:layout_below="@id/to_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:textColor="@android:color/holo_red_dark"
        android:text="Timings"
        android:textSize="18dp"
        android:layout_marginBottom="12dp"/>
    <!--     android:background="@android:color/darker_gray"  -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timings_heading"
        android:text=""/>
</RelativeLayout>


</ScrollView>